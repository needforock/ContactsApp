<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ve.needforock.contactsapp.AddContactActivity">

    <TextView
        android:id="@+id/newContactNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_face_black_24dp"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/newContactPhoneTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newContactNameTv"
        android:drawableLeft="@mipmap/ic_phone_black_24dp"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/newContactEmailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newContactPhoneTv"
        android:visibility="gone"
        android:drawableLeft="@mipmap/ic_email_black_24dp"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/groupTv"
        android:layout_below="@id/newContactEmailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        android:textSize="@dimen/text_size" />


</RelativeLayout>






